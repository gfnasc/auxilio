{% extends 'system/includes/base.twig' %}

{% block main %}
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">

        	{% if msg is defined %}
                <div class="alert alert-success alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                    <i class="icon fa fa-check"></i>{{ msg }}
                </div>
            {% endif %}

            <br>
            
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Retirada de Medicamentos - {{ medicamento.nome }}</h3>
                </div>
                    <!-- form start -->
                    <form role="form" method="post" action="{{ path('retirar-medicamentos-action', {'id' : medicamento.cod}) }}">
                      <div class="box-body">
                        <div class="form-group">
                          <label>Quantidade</label>
                          <input name="quantidade" type="text" class="form-control" id="qtd" placeholder="Digite a quantidade">
                        </div>

                        <div class="form-group">
                          <label>Paciente</label>
                            <select class="form-control" name="paciente">
                                <option>Selecione...</option>
                                {% for pa in pacientes %}
                                    <option value="{{ pa.cod }}">{{ pa.nome }}</option>
                                {% endfor %}
                            </select>
                        </div>

                      <div class="box-footer">
                        <button type="submit" class="btn btn-success btn-flat">Efetuar retirada</button>
                      </div>
                      </div>
                    </form>

                  <!-- /.box -->
            </div>

        </section>
        <!-- /.content -->
    </div>
{% endblock %}