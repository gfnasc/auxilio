{% extends 'system/includes/base.twig' %}

{% block main %}
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">

        	{% if msg is defined %}
                <div class="alert alert-success alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <i class="icon fa fa-check"></i>{{ msg }}.
                </div>
            {% endif %}

            <br>

            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Entradas cadastradas para o medicamento: <b>{{ medicamento.nome }}</b></h3>
                </div>

                <div class="row loading" style="width: 98%; margin-left: 10px;">
                    <h3>Carregando...</h3>
                    <div class="progress progress-striped active page-progress-bar">
                        <div class="progress-bar" style="width: 100%;"></div>
                    </div>
                </div>

                <table class="table table-hover">
                    <tbody>
                    <tr>
                        <th>Nota Fiscal</th>
                        <th>Medicamento</th>
                        <th>Princípio Ativo</th>
                        <th>Quantidade</th>
                        <th>Data de entrada</th>
                        <th>Validade do lote</th>
                    </tr>

                    {% for ent in entradas %}
                        <tr>
                            <td>{{ ent.numeroNf }}</td>
                            <td>{{ ent.medicamentoCod.nome }}</td>
                            <td>{{ ent.medicamentoCod.principioAtivoCod.principioAtivoNome }}</td>
                            <td>{{ ent.qtdEntrada }}</td>
                            <td>{{ ent.dataEntrada|date('d/m/Y') }}</td>
                            <td>{{ ent.validadeLote|date('d/m/Y') }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="box-footer">
                <a href="{{ path('entrada-medicamentos') }}"><button type="button" class="btn btn-default">Voltar</button></a>
            </div>

        </section>
        <!-- /.content -->
    </div>
{% endblock %}